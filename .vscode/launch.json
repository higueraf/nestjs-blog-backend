{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug NestJS App",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": [
        "${workspaceFolder}/src/main.ts"
      ],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "env": {
        "TS_NODE_PROJECT": "tsconfig.json"
      },
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "console": "integratedTerminal"
    }
  ]
}
